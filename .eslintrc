{
    "extends": [
        "react-app",
        "react-app/jest",
        "prettier"
    ],
    "rules": {
        "no-console": "error",
        "quotes": ["error", "single"],
        "jsx-quotes": ["error", "prefer-double"],
        "prefer-const": "error",
        "indent": ["warn", 4],
        "max-len": ["error", {"code": 80}],
        "comma-dangle": "off",
        "semi": ["error", "always"]
    },
    "plugins": [
        "prettier"
    ]
}
